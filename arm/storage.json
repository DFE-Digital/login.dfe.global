{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "templatesBaseUri": {
            "type": "string",
            "defaultValue": "https://raw.githubusercontent.com/DFE-Digital/login.dfe.infrastructure/master/"
        },
        "environmentName": {
            "type": "string"
        },
        "projectIdentifier": {
            "type": "string",
            "defaultValue": "s141",
            "metadata": {
                "description": "DfE Project Identifier"
            }
        },
        "environmentId": {
            "type": "string",
            "allowedValues": [
                "d01",
                "t01",
                "t02",
                "t03",
                "p01",
                "p02"
            ],
            "metadata": {
                "description": "DfE Project EnvironmentId"
            }
        },
        "globalName": {
            "type": "string",
            "defaultValue": "signin",
            "metadata": {
                "description": "Global Project Identifier"
            }
        },
        "globalSuffix": {
            "type": "string",
            "defaultValue": "global1",
            "metadata": {
                "description": "Global Project Suffix"
            }
        },
        "skuName": {
            "type": "string",
            "defaultValue": "Standard_LRS",
            "allowedValues": [
                "Standard_LRS",
                "Standard_ZRS",
                "Standard_GRS",
                "Standard_RAGRS",
                "Premium_LRS"
            ],
            "metadata": {
                "description": "SKU Name"
            }
        }
    },
    "variables": {
        "baseName": "[tolower(concat(parameters('projectIdentifier'), parameters('environmentId'), '-', parameters('globalName'), '-', parameters('globalSuffix')))]",
        "resourceName": "[replace(variables('baseName'), '-', '')]",
        "resourceId": "[resourceId('Microsoft.Resources/deployments', variables('resourceName'))]"
    },
    "resources": [
        {
            "name": "[variables('resourceName')]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-10-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('templatesBaseUri'), 'Shared/storage-account.json')]"
                },
                "parameters": {
                    "storageAccountName": {
                        "value": "[variables('resourceName')]"
                    }
                }
            }
        }
    ],
    "outputs": {
        "resourceId": {
            "type": "string",
            "value": "[variables('resourceId')]"
        }
    }
}